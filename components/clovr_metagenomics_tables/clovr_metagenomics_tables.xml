<?xml version="1.0" encoding="UTF-8"?>

<commandSetRoot xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation='commandSet.xsd'>
    <commandSet type="serial">
        <state>incomplete</state>
        <name>clovr_metagenomics_tables workflow</name>
        <command>
            <type>RunUnixCommand</type>
            <name>create output directory</name>
            <state>incomplete</state>
            <executable>mkdir</executable>
            <arg>-p -m 777 $;OUTPUT_DIRECTORY$;</arg>
        </command>
        <command>
            <type>RunUnixCommand</type>
            <name>create summary tables</name>
            <state>incomplete</state>
            <executable>$;BIN_DIR$;/clovr_metagenomics_tsvtables.pl</executable>
            <arg>-b $;BLAST_LIST$; -c $;CLUSTER_LIST$; -m `cat $;MAPPING_FILE$;` -a $;ANNOTATION_FILE$; -p $;OUTPUT_PREFIX$;</arg>
        </command>
        <command>
            <type>RunUnixCommand</type>
            <name>create tables list</name>
            <state>incomplete</state>
            <executable>$;BIN_DIR$;/create_list_file</executable>
            <param>
                <key>--directory</key>
                <value>$;OUTPUT_DIRECTORY$;</value>
            </param>
            <param>
                <key>--regex</key>
                <value>".*\.tsv"</value>
            </param>
            <param>
                <key>--output_list</key>
                <value>$;TABLE_OUTPUT_LIST$;</value>
            </param>
        </command>
        <command>
            <type>RunUnixCommand</type>
            <name>create paired tables list</name>
            <state>incomplete</state>
            <executable>$;BIN_DIR$;/create_list_file</executable>
            <param>
                <key>--directory</key>
                <value>$;OUTPUT_DIRECTORY$;</value>
            </param>
            <param>
                <key>--regex</key>
                <value>".*\.2tsv"</value>
            </param>
            <param>
                <key>--output_list</key>
                <value>$;PAIRED_TABLE_OUTPUT_LIST$;</value>
            </param>
        </command>
    </commandSet>
</commandSetRoot>
