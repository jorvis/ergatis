<?xml version="1.0" encoding="UTF-8"?>

<commandSetRoot xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation='commandSet.xsd'>
    <commandSet type="serial">
        <state>incomplete</state>
        <name>create pseudomolecules workflow</name>
        <!--Preprocessing-->
        <command>
            <type>RunUnixCommand</type>
            <name>create output directory</name>
            <state>incomplete</state>
            <executable>mkdir</executable>
            <arg>-p -m 777 $;OUTPUT_DIRECTORY$;</arg>
        </command>
        <command>
            <type>RunUnixCommand</type>
            <name>create temp directory</name>
            <state>incomplete</state>
            <executable>mkdir</executable>
            <arg>-p -m 777 $;TMP_DIR$;</arg>
        </command>
        <command>
            <type>RunUnixCommand</type>
            <name>create_pseudomolecules</name>
            <state>incomplete</state>
            <executable>$;BIN_DIR$;/create_pseudomolecules</executable>
	    <param>
		<key>--input_file</key>
		<value>$;ACSN_FILE$;</value>
	    </param>
	    <param>
		<key>--contig_file</key>
		<value>$;CONTIG_FILE$;</value>
	    </param>
	    <param>
		<key>--strain</key>
		<value>$;STRAIN_NAME$;</value>
	    </param>
	    <param>
		<key>--database</key>
		<value>$;DATABASE$;</value>
	    </param>
	    <param>
		<key>--format</key>
		<value>$;FORMAT$;</value>
	    </param>
	    <param>
		<key>--output_dir</key>
		<value>$;OUTPUT_DIRECTORY$;</value>
	    </param>
	    <param>
		<key>--nucmer_exec</key>
		<value>$;NUCMER_EXEC$;</value>
	    </param>
	    <param>
		<key>--coords_exec</key>
		<value>$;COORDS_EXEC$;</value>
	    </param>
	    <param>
		<key>--config_param</key>
		<value>'$;NUCMER_CONFIG$;'</value>
	    </param>
	    <param>
		<key>--log</key>
		<value>$;TMP_DIR$;/create_pseudomolecules.log</value>
	    </param>
	    <param>
		<key>--debug</key>
		<value>4</value>
	    </param>
        </command>
        <!--Postprocessing-->
		<command>
			<type>RunUnixCommand</type>
			<name>create pseudomolecules file list</name>
			<state>incomplete</state>
			<executable>$;BIN_DIR$;/create_list_file</executable>
			<param>
				<key>--directory</key>
				<value>$;OUTPUT_DIRECTORY$;</value>
			</param>
			<param>
				<key>--regex</key>
				<value>".*\.pseudomolecule\..*\.fasta"</value>
			</param>					
			<param>
				<key>--output_list</key>
				<value>$;OUTPUT_LIST$;</value>
			</param>		    
		</command>
	</commandSet>
</commandSetRoot>
