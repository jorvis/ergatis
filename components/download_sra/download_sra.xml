<?xml version="1.0" encoding="UTF-8"?>

<commandSetRoot xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation='commandSet.xsd'>
    <commandSet type="serial">
        <state>incomplete</state>
        <name>download sra workflow</name>
        <command>
            <type>RunUnixCommand</type>
            <name>create output directory</name>
            <state>incomplete</state>
            <executable>mkdir</executable>
            <arg>-p -m 777 $;OUTPUT_DIRECTORY$;</arg>
        </command>
        <command>
            <type>RunUnixCommand</type>
            <name>create temp directory</name>
            <state>incomplete</state>
            <executable>mkdir</executable>
            <arg>-p -m 777 $;TMP_DIR$;</arg>
        </command>
        <command>
            <type>RunUnixCommand</type>
            <name>Download SRA Reads</name>
            <state>incomplete</state>
            <executable>$;BIN_DIR$;/download_sra</executable>
            <param>
                <key>--run_id</key>
                <value>$;RUN_ID$;</value>
            </param>
            <param>
                <key>--output_dir</key>
                <value>$;OUTPUT_DIRECTORY$;</value>
            </param>
            <param>
                <key>--ftp</key>
                <value>$;FTP_PATH$;</value>
            </param>
            <param>
                <key>--username</key>
                <value>$;USERNAME$;</value>
			</param>
            <param>
                <key>--password</key>
                <value>$;PASSWORD$;</value>
            </param>
            <param>
                <key>--num_retry</key>
                <value>$;NUM_RETRIES$;</value>
            </param>
            <param>
            	<key>stdout</key>
            	<value>$;OUTPUT_DIRECTORY$;/download_sra.stdout</value>
            </param>
            <param>
            	<key>stderr</key>
            	<value>$;OUTPUT_DIRECTORY$;/download_sra.stderr</value>
            </param>
        </command>
    </commandSet>
</commandSetRoot>
