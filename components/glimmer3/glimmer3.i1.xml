<?xml version="1.0" encoding="UTF-8"?>

<commandSetRoot xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation='commandSet.xsd'>
    <commandSet type="serial">
        <name>glimmer3 component</name>
        <command>
            <type>RunUnixCommand</type>
            <name>glimmer3</name>
            <state>incomplete</state>
            <executable>$;GLIMMER3_EXEC$;</executable>
            <arg>$;I_FILE_PATH$; $;ICM$; $;OUTPUT_DIRECTORY$;/$;ITERATOR_NAME$;/g$;GROUP_NUMBER$;/$;I_FILE_BASE$;.$;COMPONENT_NAME$; $;GLIMMER3_OPTS$; -P "$;START_CODON_USAGE$;"</arg>
