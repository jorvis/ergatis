<?xml version="1.0" encoding="UTF-8"?>

<commandSetRoot xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation='commandSet.xsd'>
    <commandSet type="serial">
        <state>incomplete</state>
        <name>j_ortholog_clusters workflow</name>
        <!--Preprocessing-->
        <command>
            <type>RunUnixCommand</type>
            <name>create output directory</name>
            <state>incomplete</state>
            <executable>mkdir</executable>
            <arg>-p -m 777 $;OUTPUT_DIRECTORY$;</arg>
        </command>
        <command>
            <type>RunUnixCommand</type>
            <name>create temp directory</name>
            <state>incomplete</state>
            <executable>mkdir</executable>
            <arg>-p -m 777 $;TMP_DIR$;</arg>
        </command>
        <!--Processing-->
        <command>
            <type>RunDistributedCommand</type>
            <name>parse bsml input</name>
            <state>incomplete</state>
            <executable>$;BIN_DIR$;/CogBsmlLoader</executable>
            <param>  
                <key>--bsmlSearchList</key>
                <value>$;MATCH_BSML_FILE_LIST$;</value>
            </param>
            <param>  
                <key>--bsmlModelList</key>
                <value>$;QUERY_BSML_FILE_LIST$;</value>
            </param>
            <param>  
                <key>--bsmlJaccardList</key>
                <value>'$;JACCARD_OUTPUT_LIST$;'</value>
            </param>
            <param>  
                <key>--outfile</key>
                <value>$;TMP_DIR$;/$;PROJECT$;.$;PIPELINEID$;.btab</value>
            </param>
            <param>  
                <key>--pvalcut</key>
                <value>$;PVALCUT$;</value>
            </param>
            <param>  
                <key>stdout</key>
                <value>$;TMP_DIR$;/bsml2cogbtab.stdout</value>
            </param>
            <param>  
                <key>stderr</key>
                <value>$;TMP_DIR$;/bsml2cogbtab.stderr</value>
            </param>
            <dceSpec type="sge">
                <OS>linux</OS>
            </dceSpec>
        </command>
        <command>
            <type>RunDistributedCommand</type>
            <name>best hit</name>
            <state>incomplete</state>
            <executable>$;BIN_DIR$;/best_hit</executable>
            <arg>-i $;TMP_DIR$;/$;PROJECT$;.$;PIPELINEID$;.btab -j $;JACCARD_CUTOFF$;</arg>
            <param>  
                <key>stdout</key>
                <value>$;TMP_DIR$;/besthit.stdout</value>
            </param>
            <param>  
                <key>stderr</key>
                <value>$;TMP_DIR$;/besthit.stderr</value>
            </param>
            <dceSpec type="sge">
                <OS>linux</OS>
            </dceSpec>
        </command>
        <command>
            <type>RunUnixCommand</type>
            <name>cogs2fasta</name>
            <state>incomplete</state>
            <executable>$;BIN_DIR$;/CogProteinFasta</executable>
            <param>  
                <key>--cogFile</key>
                <value>$;TMP_DIR$;/$;PROJECT$;.$;PIPELINEID$;.cog</value>
            </param>
            <param>  
                <key>--bsmlModelList</key>
                <value>$;QUERY_BSML_FILE_LIST$;</value>
            </param>
            <param>  
                <key>--outputDir</key>
                <value>$;OUTPUT_DIRECTORY$;</value>
            </param>
            <param>  
                <key>--maxCogSeqCount</key>
                <value>$;MAX_MULTI_ALIGNMENT$;</value>
            </param>
            <param>  
                <key>stdout</key>
                <value>$;TMP_DIR$;/CogProteinFasta.stdout</value>
            </param>
            <param>  
                <key>stderr</key>
                <value>$;TMP_DIR$;/CogProteinFasta.stderr</value>
            </param>
        </command>
        <!--Postprocessing-->
        <command>
            <type>RunUnixCommand</type>
            <name>create bsml list</name>
            <state>incomplete</state>
            <executable>$;BIN_DIR$;/create_list_file</executable>
            <param>  
                <key>--directory</key>
                <value>$;OUTPUT_DIRECTORY$;</value>
            </param>
            <param>  
                <key>--regex</key>
                <value>".*\.fsa"</value>
            </param>
            <param>  
                <key>--output_list</key>
                <value>$;FASTA_OUTPUT_LIST$;</value>
            </param>
        </command>
        <command>
            <type>RunUnixCommand</type>
            <name>create raw list</name>
            <state>incomplete</state>
            <executable>$;BIN_DIR$;/create_list_file</executable>
            <param>  
                <key>--directory</key>
                <value>$;OUTPUT_DIRECTORY$;</value>
            </param>
            <param>  
                <key>--regex</key>
                <value>".*\.cog"</value>
            </param>
            <param>  
                <key>--output_list</key>
                <value>$;RAW_OUTPUT_LIST$;</value>
            </param>
        </command>
    </commandSet>
</commandSetRoot>
