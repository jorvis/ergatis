<?xml version="1.0" encoding="UTF-8"?>

<commandSetRoot xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation='commandSet.xsd'>
    <commandSet type="serial">
        <state>incomplete</state>
        <name>wu-blastp workflow</name>
        <!--Preprocessing-->
        <command>
            <type>RunUnixCommand</type>
            <name>create output directory</name>
            <state>incomplete</state>
            <executable>mkdir</executable>
            <arg>-p -m 777 $;OUTPUT_DIRECTORY$;</arg>
        </command>
        <command>
            <type>RunUnixCommand</type>
            <name>create temp directory</name>
            <state>incomplete</state>
            <executable>mkdir</executable>
            <arg>-p -m 777 $;TMP_DIR$;</arg>
        </command>
        <!--Iterator-->
        <INCLUDE file="$;DOCS_DIR$;/file_iterator_template.xml" keys="$;ITERATOR_NAME$;=ITERATOR1,$;ITERATOR_XML$;=ITERATOR1_XML">
        <!--Postprocessing-->
        <command>
            <type>RunUnixCommand</type>
            <name>create stored blast data list</name>
            <state>incomplete</state>
            <executable>$;BIN_DIR$;/create_list_file</executable>
            <param>  
                <key>--directory</key>
                <value>$;OUTPUT_DIRECTORY$;</value>
            </param>
            <param>  
                <key>--regex</key>
                <value>".*\.blast\.stored"</value>
            </param>
            <param>  
                <key>--output_list</key>
                <value>$;OUTPUT_DIRECTORY$;/pangenome.stored.list</value>
            </param>
        </command>
        <command>
            <type>RunDistributedCommand</type>
            <name>merge pangenome data</name>
            <state>incomplete</state>
            <executable>$;BIN_DIR$;/pangenome_merge_results</executable>
            <param>  
                <key>--input_list</key>
                <value>$;OUTPUT_DIRECTORY$;/pangenome.stored.list</value>
            </param>
            <param>  
                <key>--output_path</key>
                <value>$;OUTPUT_DIRECTORY$;</value>
            </param>
            <dceSpec type="sge">
                <OS>linux</OS>
            </dceSpec>
        </command>
    </commandSet>
</commandSetRoot>
