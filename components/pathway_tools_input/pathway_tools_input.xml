<?xml version="1.0" encoding="UTF-8"?>

<commandSetRoot xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation='commandSet.xsd'>
    <commandSet type="serial">
        <state>incomplete</state>
        <name>pathway_tools_input workflow</name>
        <!--Preprocessing-->
        <command>
            <type>RunUnixCommand</type>
            <name>create output directory</name>
            <state>incomplete</state>
            <executable>mkdir</executable>
            <arg>-p -m 777 $;OUTPUT_DIRECTORY$;</arg>
        </command>
        <command>
            <type>RunUnixCommand</type>
            <name>create temp directory</name>
            <state>incomplete</state>
            <executable>mkdir</executable>
            <arg>-p -m 777 $;TMP_DIR$;</arg>
        </command>
        <command>
            <type>RunUnixCommand</type>
            <name>create gbk files</name>
            <state>incomplete</state>
            <executable>$;BIN_DIR$;/chado_aengine_dumper</executable>
            <param>  
                <key>--database</key>
                <value>$;DATABASE$;</value>
            </param>
            <param>  
                <key>--user</key>
                <value>$;USERNAME$;</value>
            </param>
            <param>  
                <key>--password</key>
                <value>$;PASSWORD$;</value>
            </param>
            <param>  
                <key>--output_directory</key>
                <value>$;OUTPUT_DIRECTORY$;</value>
            </param>
            <param>  
                <key>--format</key>
                <value>gbk</value>
            </param>
            <param>  
                <key>--locus_db</key>
                <value>$;LOCUS_DB$;</value>
            </param>
            <param>  
                <key>--server</key>
                <value>$;DB_HOST$;</value>
            </param>
        </command>
        <command>
            <type>RunUnixCommand</type>
            <name>create pathway tools input files</name>
            <state>incomplete</state>
            <executable>$;BIN_DIR$;/create_ptools_input_files</executable>
            <param>  
                <key>--gbk_dir</key>
                <value>$;OUTPUT_DIRECTORY$;</value>
            </param>
            <param>  
                <key>--organism_name</key>
                <value>$;ORGANISM_NAME$;</value>
            </param>
            <param>  
                <key>--database</key>
                <value>$;DATABASE$;</value>
            </param>
            <param>  
                <key>--taxon_id</key>
                <value>$;TAXON_ID$;</value>
            </param>
            <param>  
                <key>--output_dir</key>
                <value>$;OUTPUT_DIRECTORY$;</value>
            </param>
        </command>
    </commandSet>
</commandSetRoot>
