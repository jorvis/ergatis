<?xml version="1.0" encoding="UTF-8"?>

<commandSetRoot xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation='commandSet.xsd'>
    <commandSet type="serial">
        <state>incomplete</state>
        <name>LGT workflow</name>
        <!--Preprocessing-->
        <command>
            <type>RunUnixCommand</type>
            <name>create output directory</name>
            <state>incomplete</state>
            <executable>mkdir</executable>
            <arg>-p -m 777 $;OUTPUT_DIRECTORY$;</arg>
        </command>
        <command>
            <type>RunUnixCommand</type>
            <name>create temp directory</name>
            <state>incomplete</state>
            <executable>mkdir</executable>
            <arg>-p -m 777 $;TMP_DIR$;</arg>
        </command>
        <command>
            <type>RunUnixCommand</type>
            <name>Convert sam to fasta</name>
            <executable>$;BIN_DIR$;/sam2fasta</executable>
            <param>
                <key>--file_list</key>
                <value>$;INPUT_FILE$;</value>
            </param>
            <param>
                <key>--fastq</key>
                <value>$;FASTQ$;</value>
            </param>
            <param>
                <key>--hlgt</key>
                <value>$;HLGT$;</value>
            </param>
            <param>
                <key>--output_file</key>
                <value>$;OUTPUT_FILE$;</value>
            </param>
            <param>
                <key>--tmp_dir</key>
                <value>$;OUTPUT_DIRECTORY$;</value>
            </param>
            <param>
                <key>--base_list</key>
                <value>$;OUTPUT_BASES$;</value>
            </param>
            <param>
                <key>--host</key>
                <value>$;HOST$;</value>
            </param>
            <param>
                <key>--out_list</key>
                <value>$;OUTPUT_LIST$;</value>
            </param>
            <param>
                <key>--combine_mates</key>
                <value>$;COMBINE_MATES$;</value>
            </param>
            <param>
                <key>stdout</key>
                <value>$;TMP_DIR$;/lgt_sam2fasta.stdout</value>
            </param>
            <param>
                <key>stderr</key>
                <value>$;TMP_DIR$;/lgt_sam2fasta.stderr</value>
            </param>
        </command>
    </commandSet>
</commandSetRoot>
