[interface]
classification = utility

[parameters]
;;Database and format for reference genomes from GenBank
$;DATABASE$; = nucleotide
$;FORMAT$; = fasta
;;Name of the strain
$;STRAIN_NAME$; =
;;Configuration options for NUCMER
$;NUCMER_CONFIG$; = -c 100 -maxmatch  
;;Optional pmarks spacer sequence
$;LINKER_SEQUENCE$; = none

[input]
;;Provide a single contig file or list file having paths to contigs files
$;CONTIG_INPUT$; = $;REPOSITORY_ROOT$;/output_repository/clean_fasta/$;PIPELINEID$;_$;OUTPUT_TOKEN$;/clean_fasta.list
;;Optional tab-delimited file of reference accession ids and group number
$;ACSN_FILE$; = 

[output]
$;OUTPUT_TOKEN$; = genecalls
$;OUTPUT_DIRECTORY$; = $;REPOSITORY_ROOT$;/output_repository/$;COMPONENT_NAME$;/$;PIPELINEID$;_$;OUTPUT_TOKEN$;
$;OUTPUT_LIST$; = $;OUTPUT_DIRECTORY$;/$;COMPONENT_NAME$;.list

[component]
$;COMPONENT_NAME$; = create_pseudomolecules
$;DESCRIPTION$; = none
$;WORKFLOW_REPOSITORY$; = $;REPOSITORY_ROOT$;/workflow/runtime/$;COMPONENT_NAME$;/$;PIPELINEID$;_$;OUTPUT_TOKEN$;
$;PIPELINE_TOKEN$; = unnamed

;The version,revision,tag here is set by an interpolated CVS tag
$;VERSION$; = 2.0
$;RELEASE_TAG$; = $Name$
$;REVISION$; = $Revision: 6048 $

$;TEMPLATE_XML$; = $;DOCS_DIR$;/$;COMPONENT_NAME$;.xml

;Distributed options
$;GROUP_COUNT$; = 150
$;NODISTRIB$; = 0

;the following keys are replaced at runtime by the invocation script
$;COMPONENT_CONFIG$; = 
$;COMPONENT_XML$; = 
$;PIPELINE_XML$; = 
$;PIPELINEID$; = 

[include]
$;PROJECT_CONFIG$;=

[dce]
$;PASSTHROUGH$; = -l mem_free=100M
